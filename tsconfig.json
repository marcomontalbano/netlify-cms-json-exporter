{
    "compilerOptions": {
        "target": "ES5",
        "module": "CommonJS",
        "lib": ["ES2019"],

        "declaration": true,
        "declarationMap": true,
        "rootDir": "src",
        "outDir": "dist",

        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true
    },
    "exclude": [
        "./*.ts",
        "./dist",
        "**/*.test.ts"
    ]
}
